<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.hfad.mextrav2.HomeScreen">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/main_image"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:text="Anurag Vishwa"
        android:paddingLeft="3dp"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/main_image"
        android:id="@+id/title"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:text="Today i will go for a party"
        android:paddingLeft="3dp"
        android:id="@+id/status"
        android:layout_toRightOf="@+id/main_image"
        android:layout_below="@+id/title" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/title"
        android:id="@+id/timestamp"
        android:text="time"
        android:textSize="12dp" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/status"
        android:layout_below="@+id/timestamp"
        android:id="@+id/notification"
        android:text="23"
        android:textSize="12dp" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/notification"
        android:layout_below="@+id/timestamp"
        android:id="@+id/silentstatus"
        android:text="23"
        android:textSize="12dp" />

    <View
        android:id="@+id/stline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/main_image" />


</RelativeLayout>